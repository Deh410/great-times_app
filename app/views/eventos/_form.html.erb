  <%= form_for @evento do |form| %>
      <div class="form-group form-eventos">
      Nome <%=form.text_field :nome, type:"text", class:"form-control", id:"formGroupExampleInput", placeholder:"Example input"%>       
      Data-Evento <%=form.text_field :data_evento , type:"datetime-local", class:"form-control"%>
      Data-Limite-Inscrição <%=form.text_field :data_limite_inscricao, type:"datetime-local", class:"form-control"%>
      Capacidade <%=form.text_field :capacidade, type:"number", class:"form-control"%>
      Imagem <%=form.text_field :imagem, as: :file, label: "Upload an image", type:"file", class:"form-control-file", id:"exampleFormControlFile1"%>
      Descricao <%=form.text_area :descricao, class:"form-control mb-2", id:"exampleFormControlTextarea1", rows:"3"%></textarea>

      <button class=" btn btn-primary" type="submit">Criar Evento</button>
      </div>
